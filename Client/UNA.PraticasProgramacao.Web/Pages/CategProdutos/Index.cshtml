@page
@model UNA.PraticasProgramacao.Web.Pages.CategProdutos.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout_Grid.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaProduto[0].CodigoCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaProduto[0].DescricaoCategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CategoriaProduto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoCategoria)
            </td>
            <td>
                <a class="btn btn-primary btn-circle btn-sm" asp-page="./Edit" asp-route-id="@item.IdCategoria">Edit</a> |
                <a class="btn btn-primary btn-circle btn-sm" asp-page="./Details" asp-route-id="@item.IdCategoria">Details</a> |
                <a class="btn btn-primary btn-circle btn-sm" asp-page="./Delete" asp-route-id="@item.IdCategoria">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
