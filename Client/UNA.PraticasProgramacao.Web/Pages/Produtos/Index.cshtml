@page
@model UNA.PraticasProgramacao.Web.Pages.Produtos.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout_Grid.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produtos[0].CodigoProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produtos[0].DescricaoProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produtos[0].Ncm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produtos[0].IdUnidadeMedida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produtos[0].IdCategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Produtos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ncm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUnidadeMedida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategoria)
            </td>
            <td>
                <a class="btn btn-primary btn-circle btn-sm" asp-page="./Edit" asp-route-id="@item.IdProduto">Edit</a> |
                <a class="btn btn-primary btn-circle btn-sm" asp-page="./Details" asp-route-id="@item.IdProduto">Details</a> |
                <a class="btn btn-primary btn-circle btn-sm" asp-page="./Delete" asp-route-id="@item.IdProduto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
